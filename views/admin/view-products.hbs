<section id="view-sec">
    <div class="container mt-5" style="margin-top: 25px;">
        <div class="mt-4">
            <a href="admin/add-product" class="btn btn-success ml-auto" >Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">discription</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>

      
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><a href="/product-images/{{this._id}}.jpg"><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></a></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
        <td>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure wanted to delete {{this.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>
<script>
  $(function(){
    $('#productsTable').DataTable();
  })
</script>