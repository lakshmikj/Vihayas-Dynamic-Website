<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Admin Create new account</h2>
            <form action="asignup" method="POST">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter your name">
                    <div class="form-group">
                        <label for="">Email address</label>
                        <input type="email" name="Email"  class="form-control" placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" name="Password" id="" class="form-control" placeholder="Password">
                    </div><br>
                    <a href="adminlogin">Already have an account ?</a>
                    <button type="submit" class="btn btn-primary float-end">SignUp</button>
                </div>
            </form>
        </div>
    </div>
</div>